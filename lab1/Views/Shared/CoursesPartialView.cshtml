@model IEnumerable<Course>

<div class="usersContainer">
    @foreach (var course in Model)
    {


        <div class="user-card">
            <img src="~/images/single.jpg" alt="..." width="130" class="rounded mb-2 img-thumbnail">


            <div class="user-data ">
                <p class="text-justify">@course.Name</p>
                <p class="text-justify">@course.Hours hour</p>
                <p class="text-justify">$ @course.Cost</p>
                <div class="action-btns">
                    <a class="Details-btn" asp-action="Details" asp-controller="Admin" asp-route-id="@course.CourseID">Details</a>
                    <a class="Delete-btn" asp-action="Delete" asp-controller="Admin" asp-route-id="@course.CourseID">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
