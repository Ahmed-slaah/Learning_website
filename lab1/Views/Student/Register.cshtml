@using lab1.Models
@model CreateStudentViewModel
@{
    ViewData["Title"] = "Register";
}
<link href="~/css/all.min.css" rel="stylesheet" />
<link href="~/css/Register.css" rel="stylesheet" />
<style>
    body {
        background-color: #f0f2f5;
    }
</style>
<body>
    <div>
        <div class="card-body">
            <form asp-action="Register" asp-controller="Student" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="container">
                    <h4>
                        Sign Up and Start Learning!
                    </h4>
                    <div class="row">
                        <div class="col">
                            <input asp-for="FirstName" class="form-control" placeholder="First name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>

                        </div>
                        <div class="col">
                            <input asp-for="LastName" class="form-control" placeholder="Last name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>

                        </div>
                    </div>

                    <div class="form-group">
                        <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>

                    <div class="row">
                        <div class="col">
                            <input asp-for="Country" class="form-control" placeholder="Country" />
                            <span asp-validation-for="Country" class="text-danger"></span>

                        </div>
                        <div class="col">
                            <input asp-for="City" class="form-control" placeholder="City" />
                            <span asp-validation-for="City" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <select asp-for="gender" class="form-control">
                                <option value="">Choose Gender</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                            <span asp-validation-for="gender" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <input asp-for="Age" class="form-control" placeholder="Age" />
                            <span asp-validation-for="Age" class="text-danger"></span>

                        </div>
                    </div>

                    <div class="form-group">
                        <input asp-for="Password" type="password" class="form-control" placeholder="password">
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <input asp-for="ConfirmPassword" type="text" class="form-control" placeholder="confirm password">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <!---->
                    <div class="form-group">
                        <div class="custom-file">
                            <input asp-for="ProfileImage" class="custom-file-input" id="customFile">
                            <label class="custom-file-label" for="customFile">profile image</label>
                        </div>
                        <span asp-validation-for="ProfileImage" class="text-danger"></span>
                    </div>
                    <input type="submit" class="btn Details-btn" value="Register" />
                    @Html.ActionLink("Already have account ?", "Login", "Student", null, new { @class = "login-btn" })
                </div>
            </form>
        </div>
    </div>
</body>



